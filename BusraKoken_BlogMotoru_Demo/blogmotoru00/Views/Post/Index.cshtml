@model IEnumerable<BlogMotoru00.Models.Post>

@{
    ViewBag.Title = "Index";
}
<div class="5grid-layout" id="welcome">
		<div class="row">
			<div class="12u mobileUI-main-content">
				<section class="content">
				
<h2>Yayınlar</h2>

<h3>
    @Html.ActionLink("Yeni Yayın Oluştur", "Create") || @Html.ActionLink("Kategoriler","Index","Category") ||  @Html.ActionLink("Sayfalar","Index","Page")
</h3>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Categories.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
      
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Categories.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.PostId }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.PostId })
        </td>
    </tr>
}

</table>
                    </section></div></div></div>
