@model IEnumerable<BlogMotoru00.Models.Post>

@{
    ViewBag.Title = "CPosts";
}


        @foreach (var p in Model)
            { 
	<div class="5grid-layout" id="welcome">
		<div class="row">
			<div class="12u mobileUI-main-content">
				<section class="content">
					<h2><a href="@Url.Action("Details", "Post", new { id = p.PostId })"> @p.Title </a>
                 </h2>
					 <p>@p.Abstract </p>
					
					
					<p><a href="@Url.Action("CPosts", "Home", new { Cid = p.CategoryId })" class="button-style1">Kategori : @p.Categories.Name</a><span class="button-style1">@p.Date </span></p>
				</section>
			</div>
		</div>
	</div>
        }

   